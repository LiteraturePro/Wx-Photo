@import "../../style/upload-pic.wxss";

page {
  background-size: cover;
	background-repeat: no-repeat;
  --add-action:#39b54a;
  background-color: #FFFFFF;
}
.container{
  display: flex;
  flex-direction: row;
  flex: 1;
  position: absolute;
  left: 0;
  right: 0;
  top: 0px;
  flex-wrap: wrap;
  padding-bottom: 120px;
}

.container>view{
  display: flex;
  box-sizing: border-box;
  border:1px solid #000;
  justify-content: center;
  align-items: center;
}

.upload{
  background-color: #DB3B26;
  color: #fff;
  font-size: 15px;
  height: 50px;
  justify-content: center;
  align-items: center;
  left: 20px;
  right: 20px;
  position: fixed;
  bottom: 30px;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
}

.show-tip{
  color: #000;
  font-size: 15px;
  position: relative;
  top: 0px;
  display: flex;
  flex: 1;
  left: auto;
  right: auto;
  justify-content:center;
}

.action{
  display: flex;
  width: 100%;
  margin-top:40px;
  color: #000;
  font-size: 14px;
  flex-direction: column;
  justify-content:center;
}

.action-btn>text{
  display: inline-block;
  margin-top: 20px;
  height: 40px;
  line-height: 40px;
  padding-left: 25px;
  padding-right: 25px;
  border-radius: 3px;
  border: 1px solid #ddd;
  font-size: 15px;
}
.action-btn>text:first-child{
  margin-right: 10px;
}
.footlist {
  position: relative;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding-top: 20rpx;
}

.footlist::after {
  content: '';
  clear: both;
  display: block;
}

.foot-left {
  float: left;
  width: 50%;
}

.foot-right {
  float: left;
  width: 50%;
}

.footbox {
  width: 100%;
  margin: 0 auto;
  background: #fff;
  box-sizing: border-box;
  position: relative;
  padding: 12rpx;
  padding-top: 10rpx;
}

.footbox image {
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  box-shadow: 0 8rpx 8rpx rgba(88, 88, 88, 0.233);
}

.foot-left .footbox {
  padding-right: 12rpx;
}
.round-click{
      height: 100rpx;
      width: 100rpx;
      background-color:#99FF99;
      border-radius: 100%;
      position: fixed;
      bottom: 120rpx;
      right: 20rpx;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9;
  }
  .round-click navigator{
      font-size: 32rpx;
      max-width: 80rpx;
      color: #fff;
      text-align: center;
  }
  .copyright{
    font-size: 20rpx;
    color: #000000;
    position: fixed;
    text-align: center;
    bottom: 30rpx;
    left: 0;
    right: 0;
  }
  .show-btn {
    margin-top: 100rpx;
    color: #22cc22;
  }
  .modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
  }
  .modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
  }
  .modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
  }
  .modal-content {
    padding: 50rpx 32rpx;
  }
  .modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
  }
  
  .input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
  }
  input-holder {
    color: #666;
    font-size: 28rpx;
  }
  
  .modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
  }
  .btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
  }
  .btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
  }
